{
  "dashboard": {
    "title": "Keycloak User Activity",
    "tags": ["keycloak", "user-activity", "metering"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Logins (Last 24h)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "query": "SELECT COUNT(count) FROM keycloak_user_events WHERE event_type='LOGIN' AND time > now() - 24h",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Failed Logins (Last 24h)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "query": "SELECT COUNT(count) FROM keycloak_user_events WHERE event_type='LOGIN_ERROR' AND time > now() - 24h",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active Users (Last 24h)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "query": "SELECT COUNT(DISTINCT(user_id)) FROM keycloak_user_events WHERE event_type='LOGIN' AND time > now() - 24h",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 4,
        "title": "Login Success Rate",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "query": "SELECT (COUNT(CASE WHEN success='true' THEN 1 END) * 100.0 / COUNT(*)) AS success_rate FROM keycloak_user_events WHERE event_type IN ('LOGIN', 'LOGIN_ERROR') AND time > now() - 24h",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Logins Over Time",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "query": "SELECT MEAN(count) FROM keycloak_user_events WHERE event_type='LOGIN' AND time > now() - 24h GROUP BY time(1h) FILL(0)",
            "rawQuery": true,
            "refId": "A",
            "alias": "Successful Logins"
          },
          {
            "query": "SELECT MEAN(count) FROM keycloak_user_events WHERE event_type='LOGIN_ERROR' AND time > now() - 24h GROUP BY time(1h) FILL(0)",
            "rawQuery": true,
            "refId": "B",
            "alias": "Failed Logins"
          }
        ],
        "xaxis": {
          "mode": "time",
          "show": true
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Count",
            "logBase": 1,
            "show": true
          }
        ]
      },
      {
        "id": 6,
        "title": "Event Types Distribution",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "query": "SELECT COUNT(count) FROM keycloak_user_events WHERE time > now() - 24h GROUP BY event_type",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 7,
        "title": "Top Clients by Usage",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "query": "SELECT client_id, COUNT(count) AS total_events FROM keycloak_user_events WHERE time > now() - 24h GROUP BY client_id ORDER BY total_events DESC LIMIT 10",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": []
        }
      },
      {
        "id": 8,
        "title": "Top Realms by Activity",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "query": "SELECT realm_id, COUNT(count) AS total_events FROM keycloak_user_events WHERE time > now() - 24h GROUP BY realm_id ORDER BY total_events DESC LIMIT 10",
            "rawQuery": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": []
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "realm",
          "type": "query",
          "label": "Realm",
          "query": "SHOW TAG VALUES FROM keycloak_user_events WITH KEY = realm_id",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "client",
          "type": "query",
          "label": "Client",
          "query": "SHOW TAG VALUES FROM keycloak_user_events WITH KEY = client_id",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
